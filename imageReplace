on UptateScore
   if field "score" > 0
   then
      subtract 1 from field "score"
      save this stack
   else
      put "Game Over" into field "messagesField"
   end if
   if field "score" = 50
   then
      put "well done" into field "messagesField"
   end if
   
   if field "score" = 30
   then
      put "Good for you" into field "messagesField"
   end if
   if field "score" = 10
   then
      put "you're almost done" into field "messagesField"
   end if
   if field "score" = 0
   then
      quit
   end if
end UptateScore

on mouseDown
   UptateScore
end mouseDown
